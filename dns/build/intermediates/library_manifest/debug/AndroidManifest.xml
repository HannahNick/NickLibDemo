<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.frostnerd.dnschanger"
    android:installLocation="internalOnly"
    android:versionCode="125"
    android:versionName="1.16.5.11" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission
        android:name="android.permission.USE_FINGERPRINT"
        android:required="false" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <permission
        android:name="android.permission.INTERACT_ACROSS_USERS_FULL"
        android:protectionLevel="signature" />
    <permission
        android:name="com.frostnerd.dnschanger.ACCESS_DATA"
        android:description="@string/permissions_description_access_data"
        android:label="@string/permissions_label_access_data"
        android:protectionLevel="signature" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:extractNativeLibs="true"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/security_config"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true" >
        <meta-data
            android:name="io.sentry.auto-init"
            android:value="false" />
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

        <activity
            android:name="com.frostnerd.dnschanger.activities.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop" >
            <intent-filter android:label="@string/deep_link_title" >
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.frostnerd.com"
                    android:pathPrefix="/dnschanger"
                    android:scheme="http" />
                <data
                    android:host="www.frostnerd.com"
                    android:pathPrefix="/dnschanger"
                    android:scheme="https" />
                <data
                    android:host="dnschanger"
                    android:scheme="frostnerd" />
            </intent-filter>
        </activity>

        <service
            android:name="com.frostnerd.dnschanger.services.DNSVpnService"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:stopWithTask="false" >
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>

            <meta-data
                android:name="android.net.VpnService.SUPPORTS_ALWAYS_ON"
                android:value="true" />
        </service>

        <activity
            android:name="com.frostnerd.dnschanger.activities.InvalidDNSDialogActivity"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name="com.frostnerd.dnschanger.activities.BackgroundVpnConfigureActivity"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name="com.frostnerd.dnschanger.activities.BackgroundDNSListActivity"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name="com.frostnerd.dnschanger.tasker.ConfigureActivity"
            android:exported="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.EDIT_SETTING" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.frostnerd.dnschanger.receivers.BootReceiver"
            android:enabled="true"
            android:exported="true" > <!-- TODO Check if working on all devices -->
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.frostnerd.dnschanger.tasker.FireReceiver"
            android:exported="true"
            android:process=":background" >
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.FIRE_SETTING" />
            </intent-filter>
        </receiver>

        <service android:name="com.frostnerd.dnschanger.services.ConnectivityBackgroundService" />
        <service android:name="com.frostnerd.dnschanger.services.ConnectivityCheckRestartService" />
        <service
            android:name="com.frostnerd.dnschanger.services.DataService"
            android:exported="true"
            android:permission="com.frostnerd.dnschanger.ACCESS_DATA"
            android:process=":exported" >
            <intent-filter>
                <action android:name="com.frostnerd.dnschanger.services.DataService" />
            </intent-filter>
        </service>

        <activity
            android:name="com.frostnerd.dnschanger.activities.ShortcutActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity="com.frostnerd.dnschangerShortcut"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />

        <activity-alias
            android:name="com.frostnerd.dnschanger.ShortcutActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:targetActivity="com.frostnerd.dnschanger.activities.ShortcutActivity"
            android:taskAffinity="com.frostnerd.dnschangerShortcut"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />

        <activity
            android:name="com.frostnerd.dnschanger.activities.automation.PauseDnsActivity"
            android:exported="true" />
        <activity
            android:name="com.frostnerd.dnschanger.activities.automation.ResumeDnsActivity"
            android:exported="true" />
        <activity
            android:name="com.frostnerd.dnschanger.activities.automation.StartDnsActivity"
            android:exported="true" />
        <activity
            android:name="com.frostnerd.dnschanger.activities.automation.StopDnsActivity"
            android:exported="true" />
        <activity
            android:name="com.frostnerd.dnschanger.activities.automation.ToggleDnsActivity"
            android:exported="true" />
        <activity
            android:name="com.frostnerd.dnschanger.activities.PinActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" >
        </activity>
        <activity
            android:name="com.frostnerd.dnschanger.activities.ErrorDialogActivity"
            android:autoRemoveFromRecents="true"
            android:clearTaskOnLaunch="true"
            android:excludeFromRecents="true"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:process=".ErrorProcess"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name="com.frostnerd.dnschanger.activities.AppSelectionActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.frostnerd.dnschanger.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name="com.frostnerd.dnschanger.activities.AdvancedSettingsActivity"
            android:parentActivityName="com.frostnerd.dnschanger.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>

        <service
            android:name="com.frostnerd.dnschanger.tiles.TileStartStop"
            android:icon="@drawable/ic_stat_resume"
            android:label="@string/tile_start_stop"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE" >
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>

            <meta-data
                android:name="android.service.quicksettings.ACTIVE_TILE"
                android:value="true" />
        </service>
        <service
            android:name="com.frostnerd.dnschanger.tiles.TilePauseResume"
            android:icon="@drawable/ic_stat_resume"
            android:label="@string/tile_pause_resume"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE" >
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>

            <meta-data
                android:name="android.service.quicksettings.ACTIVE_TILE"
                android:value="true" />
        </service>

        <activity
            android:name="com.frostnerd.dnschanger.activities.SettingsImportActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" >
            <intent-filter android:priority="50" >
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SENDTO" />
                <action android:name="android.intent.action.SEND_MULTIPLE" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="file" />
                <data android:scheme="content" />
                <data android:scheme="uri" />
                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:scheme="application" />
                <data android:mimeType="*/*" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.settings" />
                <data android:pathPattern=".*\\..*\\.settings" />
                <data android:pathPattern=".*\\..*\\..*\\.settings" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\.settings" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\.settings" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\.settings" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\.settings" />
            </intent-filter>
        </activity>
        <activity android:name="com.frostnerd.design.filechooseractivity.FileChooserActivity" />

        <receiver
            android:name="com.frostnerd.dnschanger.receivers.AdminReceiver"
            android:description="@string/device_admin_description"
            android:label="@string/device_admin"
            android:permission="android.permission.BIND_DEVICE_ADMIN" >
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />

            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.frostnerd.dnschanger.receivers.UpdateReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.frostnerd.dnschanger"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/debug_file_paths" />
        </provider>
        <provider
            android:name="com.frostnerd.dnschanger.util.GenericFileProvider"
            android:authorities="com.frostnerd.dnschanger.provider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/generic_provider_paths" />
        </provider>

        <service
            android:name="com.frostnerd.dnschanger.services.RuleImportService"
            android:stopWithTask="false" />
    </application>

</manifest>