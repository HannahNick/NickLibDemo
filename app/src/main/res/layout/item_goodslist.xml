<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_goods_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_launcher_round"
        />
    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_goods_img"
        app:layout_constraintTop_toTopOf="@id/iv_goods_img"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        android:textColor="@color/colorBlack"
        android:text="123"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/tv_goods_spec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_goods_name"
        app:layout_constraintLeft_toRightOf="@id/iv_goods_img"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        android:text="123"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tv_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_goods_img"
        app:layout_constraintTop_toBottomOf="@id/tv_goods_spec"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/rmb"
        android:textColor="@color/colorRed"
        />
    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_rmb"
        app:layout_constraintBottom_toBottomOf="@id/tv_rmb"
        android:textSize="17sp"
        android:text="1920"
        android:textColor="@color/colorRed"
        />
    <ImageView
        android:id="@+id/iv_cart"
        android:layout_width="35dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_local_grocery_store"
        />
</androidx.constraintlayout.widget.ConstraintLayout>